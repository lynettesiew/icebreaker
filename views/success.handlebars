<div class="success-container">
  <div class="success-header">
    <div class="success-icon">âœ“</div>
    <h1>You're All Set!</h1>
    <p class="success-message">See you at {{event.title}}</p>
  </div>

  <div class="event-details-card">
    <div class="detail-row">
      <span class="detail-label">ğŸ“… When:</span>
      <span class="detail-value">{{format_date event.date}} at {{format_time event.date}}</span>
    </div>
    <div class="detail-row">
      <span class="detail-label">ğŸ“ Where:</span>
      <span class="detail-value">{{event.location}}</span>
    </div>
  </div>

  <div class="your-answer-section">
    <div class="section-header">
      <h2>Your Answer</h2>
      <a href="/event/{{event.id}}/edit" class="btn btn-outline btn-small">Edit Answer</a>
    </div>
    <div class="answer-card your-answer">
      <p class="answer-prompt">"{{event.prompt}}"</p>
      <p class="answer-text">{{userAnswer}}</p>
    </div>
  </div>

  <div class="attendees-section">
    <h2>Who Else is Coming? ({{attendees.length}} attendees)</h2>
    <p class="attendees-intro">
      Check out what others said - great conversation starters!
    </p>

    {{#if attendees.length}}
      <div class="attendees-grid">
        {{#each attendees}}
          <div class="attendee-card">
            <div class="attendee-header">
              <span class="attendee-avatar">{{substring username 0 1}}</span>
              <span class="attendee-name">{{username}}</span>
            </div>
            <p class="attendee-answer">"{{answer}}"</p>
          </div>
        {{/each}}
      </div>
    {{else}}
      <div class="no-attendees">
        <p>ğŸ‰ You're the first to RSVP! Come back later to see who else is attending.</p>
      </div>
    {{/if}}
  </div>

  <div class="success-actions">
    <a href="/" class="btn btn-secondary">Back to Home</a>
    <a href="/dashboard" class="btn btn-primary">View My Dashboard</a>
  </div>
</div>

<style>
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1rem;
}

.section-header h2 {
  margin-bottom: 0;
}

@media (max-width: 768px) {
  .section-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 0.5rem;
  }

  .section-header .btn-small {
    width: 100%;
  }
}
</style>
